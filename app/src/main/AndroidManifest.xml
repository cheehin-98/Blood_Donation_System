<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.blooddonationsystem">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.login.LoginFragment" />
        <activity android:name=".ui.register.RegisterActivity" />
        <activity android:name=".ui.register.DonorRegisterBirthdayActivity"/>
        <activity android:name=".ui.register.DonorRegisterGenderActivity"/>
        <activity android:name=".ui.register.DonorRegisterContactActivity"/>
        <activity android:name=".ui.register.DonorRegisterEmailPasswordActivity"/>
        <activity android:name=".ui.register.DonorRegisterFullNameActivity"/>
        <activity android:name=".ui.register.DonorRegisterUsernameActivtity"/>
        <activity android:name=".ui.register.DonorRegisterProfilePictureActivity"/>
        <activity android:name=".ui.register.DonorRegisterAddressActivity"/>
        <activity android:name=".ui.register.DonorRegisterBloodTypeActivity"/>

        <activity android:name=".ui.register.OrganizerRegisterNameActivity"/>
        <activity android:name=".ui.register.OrganizerRegisterContactActivity"/>
        <activity android:name=".ui.register.OrganizerRegisterAddressActivity"/>
        <activity android:name=".ui.register.OrganizerRegisterUsernameActivity"/>
        <activity android:name=".ui.register.OrganizerRegisterProfilePictureActivity"/>
        <activity android:name=".ui.register.OrganizerRegisterEmailPasswordActivity"/>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>