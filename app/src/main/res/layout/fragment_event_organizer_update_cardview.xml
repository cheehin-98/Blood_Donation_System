<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardUpdateEventListView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/event_image_update"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_image_black_24dp" />

        <TextView
            android:id="@+id/event_title_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="Event Title"
            android:textColor="@color/toolbar_color_header"
            android:textSize="24sp"
            android:textStyle="bold"
            app:fontFamily="@font/roboto"
            app:layout_constraintStart_toEndOf="@+id/event_image_update"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/event_from_date_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="From Date"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/event_image_update"
            app:layout_constraintTop_toBottomOf="@+id/event_title_update" />

        <TextView
            android:id="@+id/event_to_date_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="To Date"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/event_image_update"
            app:layout_constraintTop_toBottomOf="@+id/event_from_date_update" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>